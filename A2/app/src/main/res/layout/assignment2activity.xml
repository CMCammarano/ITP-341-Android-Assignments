<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Assignment2Activity"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="144dp"
                android:layout_height="120dp"
                android:id="@+id/img_american"
                android:src="@drawable/placeholder"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_american"
                android:id="@+id/text_american"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="144dp"
                android:layout_height="120dp"
                android:id="@+id/img_indian"
                android:src="@drawable/placeholder"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_indian"
                android:id="@+id/text_indian"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="144dp"
                android:layout_height="120dp"
                android:id="@+id/img_mideast"
                android:src="@drawable/placeholder"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_mideast"
                android:id="@+id/text_mideast"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="144dp"
                android:layout_height="120dp"
                android:id="@+id/img_chinese"
                android:src="@drawable/placeholder"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_chinese"
                android:id="@+id/text_chinese"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="144dp"
                android:layout_height="120dp"
                android:id="@+id/img_italian"
                android:src="@drawable/placeholder"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_italian"
                android:id="@+id/text_italian"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="144dp"
                android:layout_height="120dp"
                android:id="@+id/img_portuguese"
                android:src="@drawable/placeholder"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_portuguese"
                android:id="@+id/text_portuguese"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>